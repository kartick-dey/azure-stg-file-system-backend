{
    "name": "node-with-okta-authentication",
    "version": "1.0.0",
    "description": "NodeJS APIs with okta access token authentication using typescript",
    "main": "app.ts",
    "scripts": {
        "build": "tsc",
        "start": "nodemon dist/server.js",
        "dev": "nodemon --watch src --exec \"ts-node src/server.ts\"",
        "watch": "tsc -w",
        "start:dev": "concurrently \"npm run watch\" \"npm run dev\""
    },
    "author": "Kartick Dey",
    "license": "ISC",
    "dependencies": {
        "@azure/identity": "^4.5.0",
        "@azure/keyvault-secrets": "^4.9.0",
        "@okta/jwt-verifier": "^4.0.1",
        "axios": "^1.7.7",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "path": "^0.12.7",
        "uuid": "^10.0.0",
        "winston": "^3.15.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^5.0.0",
        "@types/node": "^22.8.5",
        "@types/uuid": "^10.0.0",
        "@types/winston": "^2.4.4",
        "concurrently": "^9.0.1",
        "nodemon": "^3.1.7",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0"
    }
}
